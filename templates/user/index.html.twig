{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-12 p-6 bg-white rounded-lg shadow-lg border border-gray-200">
        <h1 class="text-3xl font-bold text-primary mb-6">Mon Profil</h1>

        <div class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-800">Informations personnelles</h2>
            <p class="text-gray-600 mt-2"><strong>Nom :</strong> {{ user.name }}</p>
            <p class="text-gray-600 mt-2"><strong>Pr√©nom :</strong> {{ user.firstname }}</p>
            <p class="text-gray-600 mt-2"><strong>Email :</strong> {{ user.email }}</p>
        </div>

        <div class="flex justify-between space-x-8 mt-8">
            <a href="{{ path('user_articles', { id: user.id }) }}"
               class="w-1/2 py-3 px-4 bg-secondary text-white font-bold rounded-lg hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary text-center">
                Mes articles
            </a>

            <a href="{{ path('app_user_edit', { id: user.id }) }}"
               class="w-1/2 py-3 px-4 bg-secondary text-white font-bold rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary text-center">
                Modifier le profil
            </a>
        </div>
    </div>
{% endblock %}
