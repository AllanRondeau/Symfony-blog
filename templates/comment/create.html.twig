{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-12 p-6 bg-white rounded-lg shadow-lg border border-gray-200">
        <div class="mb-6">
            <p class="text-3xl font-bold text-primary ">Ajouter un commentaire</p>
            <p class="text-xl">Article: {{ article.title }}</p>
        </div>
        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            <div class="mb-4">
                {{ form_label(form.title, 'Titre') }}
                <div>
                    {{ form_widget(form.title, {
                        'attr': {
                            'class': 'mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary'
                        }
                    }) }}
                </div>
                {{ form_errors(form.title) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.content, 'Contenu') }}
                <div>
                    {{ form_widget(form.content, {
                        'attr': {
                            'class': 'mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-primary focus:border-primary'
                        }
                    }) }}
                </div>
                {{ form_errors(form.content) }}
            </div>

            <button class="w-full py-3 px-4 bg-primary text-white font-bold rounded-lg hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-primary" type="submit">
                Modifier le commentaire
            </button>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
