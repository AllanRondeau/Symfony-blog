{% extends 'base.html.twig' %}

{% block body %}
    <main class="mt-10">
        <h2 class="uppercase font-bold text-primary text-xl pl-4">derniers articles</h2>
        <div class="p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for article in articles %}
                <div class="bg-white shadow-md rounded-lg p-4">
                    <h2 class="text-xl text-brown font-bold">{{ article.title }}</h2>
                    <p class="text-black mt-2">
                        {{ article.content|length > 100 ? article.content|slice(0, 100) ~ '...' : article.content }}
                    </p>
                    <div class="flex justify-between items-center">
                        <p class="text-gray-400 text-sm mt-4">
                            {{ article.createdAt|date('d/m/Y') }}
                        </p>
                        <a class="text-sm uppercase border border-black text-secondary hover:text-black hover:bg-secondary px-3 py-1 transition-colors duration-200 rounded-sm" href="{{ path('app_article', { id: article.id }) }}"> lire </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
